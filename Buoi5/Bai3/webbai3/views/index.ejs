<!DOCTYPE html>
<html>
<head>
    <title>DHT11 Real-time Temperature</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body { font-family: sans-serif; display: flex; flex-direction: column; align-items: center; }
        #data-display { font-size: 2em; margin-bottom: 20px; }
        #chart-container { width: 80%; max-width: 800px; }
    </style>
</head>
<body>
    <h1>üå°Ô∏è Bi·ªÉu ƒë·ªì Nhi·ªát ƒë·ªô & ƒê·ªô ·∫©m Real-time</h1>
    
    <div id="data-display">
        Nhi·ªát ƒë·ªô: <span id="temp-value">--</span> ¬∞C | 
        ƒê·ªô ·∫©m: <span id="hum-value">--</span> %
    </div>

    <div id="chart-container">
        <canvas id="tempChart"></canvas>
    </div>

    <script>
        const tempValue = document.getElementById('temp-value');
        const humValue = document.getElementById('hum-value');
        const MAX_DATA_POINTS = 10; 

        // Kh·ªüi t·∫°o Bi·ªÉu ƒë·ªì Chart.js
        const ctx = document.getElementById('tempChart').getContext('2d');
        const tempChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [], 
                datasets: [
                    {
                        label: 'Nhi·ªát ƒë·ªô (¬∞C)',
                        data: [],
                        borderColor: 'rgb(255, 99, 132)',
                        tension: 0.1
                    },
                    {
                        label: 'ƒê·ªô ·∫©m (%)',
                        data: [],
                        borderColor: 'rgb(54, 162, 235)',
                        tension: 0.1
                    }
                ]
            },
            options: {
                scales: { y: { beginAtZero: true } }
            }
        });

        // K·∫øt n·ªëi WebSocket
        const socket = new WebSocket('ws://localhost:<%= port %>'); 
        

        socket.onopen = () => {
            console.log('ƒê√£ k·∫øt n·ªëi t·ªõi WebSocket Server.');
        };

        socket.onmessage = (event) => {
            try {
                const data = JSON.parse(event.data);
                const currentTime = new Date().toLocaleTimeString();

                if (data.temp !== undefined && data.hum !== undefined) {
                    // 1. C·∫≠p nh·∫≠t gi√° tr·ªã hi·ªÉn th·ªã
                    tempValue.textContent = data.temp;
                    humValue.textContent = data.hum;

                    // 2. C·∫≠p nh·∫≠t Bi·ªÉu ƒë·ªì
                    tempChart.data.labels.push(currentTime);
                    tempChart.data.datasets[0].data.push(data.temp);
                    tempChart.data.datasets[1].data.push(data.hum);

                    if (tempChart.data.labels.length > MAX_DATA_POINTS) {
                        tempChart.data.labels.shift();
                        tempChart.data.datasets[0].data.shift();
                        tempChart.data.datasets[1].data.shift();
                    }
                    tempChart.update();
                }
            } catch (e) {
                console.error('L·ªói ph√¢n t√≠ch d·ªØ li·ªáu t·ª´ server:', e);
            }
        };

        socket.onclose = () => {
            console.log('Ng·∫Øt k·∫øt n·ªëi WebSocket.');
        };
    </script>
</body>
</html>
